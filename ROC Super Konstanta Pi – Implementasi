from mpmath import mp
from fractions import Fraction
import cmath
import struct
from Crypto.Cipher import AES
import hashlib
from web3 import Web3

# ğŸ¯ 1ï¸âƒ£ Pi dengan Presisi Tinggi (1000 Digit)
mp.dps = 1000  
pi_high_precision = mp.pi  

# ğŸ¯ 2ï¸âƒ£ Pi dalam Bentuk Pecahan Rasional
pi_fraction = Fraction(str(mp.pi)).limit_denominator(10**10)

# ğŸ¯ 3ï¸âƒ£ Pi dalam Bilangan Kompleks
complex_pi = cmath.pi + 1j * cmath.e

# ğŸ¯ 4ï¸âƒ£ Pi dalam Format Biner & Hexadecimal
binary_pi = bin(struct.unpack('!I', struct.pack('!f', 3.141592653589793))[0])
hex_pi = hex(struct.unpack('!I', struct.pack('!f', 3.141592653589793))[0])

# ğŸ¯ 5ï¸âƒ£ Pi dalam Format Terenkripsi AES
key = hashlib.sha256(b"pi_secret_key").digest()
cipher = AES.new(key, AES.MODE_ECB)

# Pi dalam bentuk string dienkripsi
pi_str = f"{mp.pi:.32f}".encode('utf-8')
pi_padded = pi_str.ljust(32, b'\0')  # Padding agar sesuai blok 16/32 byte

encrypted_pi = cipher.encrypt(pi_padded)

# ğŸ¯ 6ï¸âƒ£ Integrasi Pi Blockchain â€“ Smart Contract AI
w3 = Web3(Web3.HTTPProvider("https://node.pi-blockchain.com"))

smart_contract = '''
pragma solidity ^0.8.0;

contract PiAI {
    function calculatePi() public pure returns (string memory) {
        return "3.141592653589793238462643383279";
    }
}
'''

# ğŸ¯ 7ï¸âƒ£ Web3.js untuk Transaksi Pi Blockchain
transaction_data = {
    "to": "0x123456789abcdef",
    "value": w3.toWei(3.14, "ether"),
    "gas": 21000,
    "gasPrice": w3.toWei(10, "gwei"),
    "nonce": w3.eth.get_transaction_count("0xYourAddress"),
}

# ğŸ”¥ OUTPUT SUPER KONSTANTA PI
print(f"ğŸ“Œ Pi dengan Presisi 1000 Digit:\n{pi_high_precision}\n")
print(f"ğŸ“Œ Pi dalam Pecahan Rasional:\n{pi_fraction}\n")
print(f"ğŸ“Œ Pi dalam Bilangan Kompleks:\n{complex_pi}\n")
print(f"ğŸ“Œ Pi dalam Format Biner: {binary_pi}")
print(f"ğŸ“Œ Pi dalam Format Hexadecimal: {hex_pi}\n")
print(f"ğŸ“Œ Pi Terenkripsi AES:\n{encrypted_pi.hex()}\n")
print(f"ğŸ“Œ Smart Contract AI untuk Pi Blockchain:\n{smart_contract}\n")
print(f"ğŸ“Œ Data Transaksi Pi Blockchain:\n{transaction_data}\n")
